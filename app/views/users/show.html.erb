<h1>User#show</h1>
<p>Find me in app/views/user/show.html.erb</p>
<div class="">
  <aside class="">
    <div class="">
      <div class="">
       <%= @user.username %>
      </div>
      <div class="">
        <% if @user.image.present? %>
          <%= image_tag @user.image.url %>
        <% else %>
          <%= image_tag("non-image.jpg") %>
        <% end %>
      </div>
      <% @posts.each do |post| %>
        <div class="">
        <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= post.youtube_url%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <%= post.content %>
        <%= image_tag post.image.url %>
        <div class="image">
          <% if post.image.present? %>
            <%= image_tag post.image.url %>
          <% else %>
            <%= image_tag("non-image.jpg") %>
          <% end %>
      <% end %>
      <div class="">
        <p class="">自己紹介</p>
        <p><%= @user.introduce %></p>
      </div>
    </div>
  </aside>
  </div>
